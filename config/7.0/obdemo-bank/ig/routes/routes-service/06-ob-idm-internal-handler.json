{
  "name" : "OB IDM Authorized Requests",
  "baseURI" : "https://&{iam.fqdn}",
  "condition" : "${matches(request.uri.path, '^/openidm-internal')}",
  "handler": {
    "type": "Chain",
    "config": {
      "filters": [
        {
          "type": "ClientCredentialsOAuth2ClientFilter",
          "config": {
            "clientId": "&{ig.client.id}",
            "clientSecretId": "ig.client.secret",
            "secretsProvider": "SystemAndEnvSecretStore-IAM",
            "tokenEndpoint": "https://&{iam.fqdn}/am/oauth2/realms/root/realms/&{am.realm}/access_token",
            "scopes": [
              "fr:idm:*"
            ],
            "handler": "TokenRequestHandler"
          }
        },
        {
          "type": "UriPathRewriteFilter",
          "config": {
            "mappings": {
              "/openidm-internal": "/openidm"
            },
            "failureHandler": {
              "type": "StaticResponseHandler",
              "config": {
                "status": 500,
                "headers": {
                  "Content-Type": [
                    "text/plain"
                  ]
                },
                "entity": "Invalid URL produced"
              }
            }
          }
        },
        {
          "name": "HeaderFilter-IAM",
          "type": "HeaderFilter",
          "config": {
            "messageType": "REQUEST",
            "remove": [
              "host",
              "X-Forwarded-Host"
            ],
            "add": {
              "X-Forwarded-Host": [
                "&{iam.fqdn}"
              ]
            }
          }
        }
      ],
      "handler": "ReverseProxyHandler"
    }
  }}