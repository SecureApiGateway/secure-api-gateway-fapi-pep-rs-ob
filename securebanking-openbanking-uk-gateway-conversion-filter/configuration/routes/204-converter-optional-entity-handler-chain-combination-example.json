{
  "name": "204 converter optional entity handler chain combination example",
  "auditService": "AuditService-OB-Route",
  "baseURI": "https://&{identity.platform.fqdn}",
  "condition": "${matches(request.uri.path, '^/repo/converter/v(\\\\d+.)?(\\\\d+.)?(\\\\*|\\\\d+)/request/entity')}",
  "handler": {
    "type": "Chain",
    "config": {
      "filters": [
        {
          "name": "get intent from IDM",
          "type": "ScriptableFilter",
          "config": {
            "type": "application/x-groovy",
            "clientHandler": "IDMClientHandler",
            "file": "RepoConsentConversionExample.groovy",
            "args": {
              "routeArgIdmBaseUri": "https://&{identity.platform.fqdn}",
              "routeArgObjUser": "&{user.object}"
            }
          }
        }
      ],
      "handler": {
        "name": "ConversionHandler",
        "type": "Chain",
        "config": {
          "filters": [
            {
              "name": "IntentConverterFilter-AccountAccessConsent",
              "type": "IntentConverterFilter",
              "config": {
                "messageType": "request",
                "entity": "#{request.entity.string}",
                "resultTo": [
                  "REQUEST",
                  "RESPONSE"
                ]
              }
            }
          ],
          "handler": {
            "type": "StaticResponseHandler",
            "config": {
              "status": 404,
              "reason": "Not Found"
            }
          }
        }
      }
    }
  }
}
